# Dockerfile for Beautiful Malaria Detection UI
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY simple_presentation_app.py ./app.py
COPY data/ ./data/

# Create streamlit config directory
RUN mkdir -p /root/.streamlit

# Create optimized Streamlit configuration for production
RUN echo '[server]\n\
port = 8501\n\
address = "0.0.0.0"\n\
headless = true\n\
enableCORS = false\n\
enableXsrfProtection = false\n\
maxUploadSize = 10\n\
\n\
[browser]\n\
gatherUsageStats = false\n\
\n\
[theme]\n\
primaryColor = "#667eea"\n\
backgroundColor = "#ffffff"\n\
secondaryBackgroundColor = "#f0f2f6"\n\
textColor = "#262730"\n\
\n\
[logger]\n\
level = "info"' > /root/.streamlit/config.toml

# Expose port (Railway will use PORT environment variable)
EXPOSE 8501

# Health check for Railway
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Use Railway's PORT environment variable with fallback
CMD streamlit run app.py --server.port=${PORT:-8501} --server.address=0.0.0.0
